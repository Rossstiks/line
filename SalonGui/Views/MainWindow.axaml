<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="SalonGui.Views.MainWindow"
        Title="Salon Manager" Width="400" Height="300"
        WindowStartupLocation="CenterScreen">
    <StackPanel Margin="10" Spacing="5">
        <Button Content="Add Entry" Click="AddEntry"/>
        <Button Content="Close Month" Click="CloseMonth"/>
        <Button Content="Adjust Month" Click="AdjustMonth"/>
        <Button Content="Generate Report" Click="GenerateReport"/>
    </StackPanel>
</Window>
